// classe Pessoa
public class pessoa {
    // atributos privados 
    private String nome;
    private int idade;
    private double altura;
    
    // construtor
    public pessoa(String nome, int idade, double altura)
        this.nome = nome;
        this.idade = idade;
        this.altura = altura;
        
}
// metodos getters e setters para nome
public String getNome() {
    return nome;
}
public void setIdade(int idade) {
    this.idade = idade;
}
// metodos getters e setters para altura
public double getAltura() {
    return altura;
}
public void setAltura(double altura)
    this.altura = altura;
